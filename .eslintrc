{
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "parser": "@babel/eslint-parser",
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
      "requireConfigFile": false
    },
    "plugins": [
        "@babel",
        "spellcheck"
    ],
    "rules": {
      "no-console": 2,
      "indent": [
            "error",
            2
        ],
        "strict": [
            2,
            "never"
        ],
        "require-jsdoc": 0,
        "no-invalid-this": 0,
        "max-len": [
            1,
            250
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-await-in-loop": 1,
        "camelcase": "off",
        "new-cap": 0,
        "eqeqeq": [
            "error",
            "always",
            {
                "null": "ignore"
            }
        ],
        "one-var": [
            "error",
            "never"
        ]
    }
}
